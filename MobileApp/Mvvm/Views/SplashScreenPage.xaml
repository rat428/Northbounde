<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Northboundei.Mobile.Mvvm.Views.SplashScreenPage"
             Title="SplashScreenPage">
    <Grid>
        <Image
             Source="logo.png"
             HeightRequest="128"
             VerticalOptions="Center"
             HorizontalOptions="Center"
             Aspect="AspectFit"
             SemanticProperties.Description="Logo" />
        
        <!--Spinner at the bottom with a good margin-->
        <ActivityIndicator
            IsRunning="True"
            VerticalOptions="End"
            HorizontalOptions="Center"
            Scale="2"
            Margin="0,0,0,100"/>
    </Grid>
</ContentPage>