<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Northboundei.Mobile.Mvvm.Views.Sections.Section5">
    <VerticalStackLayout Padding="16">
        <!-- Session Start Time -->
        <Grid ColumnDefinitions="auto,*" Margin="0,8">
            <Border StrokeShape="RoundRectangle 8,0,8,0" Padding="2" BackgroundColor="{StaticResource Gray100}">
                <Label Text="Session Start Time" HorizontalOptions="Center" VerticalOptions="Center" />
            </Border>
            <Border StrokeShape="RoundRectangle 0,8,0,8" Padding="2"  Grid.Column="1" >
                <TimePicker  Time="{Binding Section5ViewModel.SessionStartTime}" />
            </Border>
        </Grid>

        <!-- Session Span Dropdown -->
        <Grid ColumnDefinitions="auto,*" Margin="0,8">
            <Border StrokeShape="RoundRectangle 8,0,8,0" Padding="2" BackgroundColor="{StaticResource Gray100}">
                <Label Text="How Long was your Session?" HorizontalOptions="Center" VerticalOptions="Center" />
            </Border>
            <Border StrokeShape="RoundRectangle 0,8,0,8" Padding="2" Grid.Column="1">
                <Picker ItemsSource="{Binding Section5ViewModel.SessionSpans}" 
                                SelectedItem="{Binding Section5ViewModel.SelectedSessionSpan}" 
                                Title="Select Session Duration"
                                Margin="0,8"/>
            </Border>
        </Grid>

        <!-- Session End Time -->
        <Grid ColumnDefinitions="auto,*" Margin="0,8">
            <Border StrokeShape="RoundRectangle 8,0,8,0" Padding="2" BackgroundColor="{StaticResource Gray100}">
                <Label Text="Session End Time" HorizontalOptions="Center" VerticalOptions="Center" />
            </Border>
            <Border StrokeShape="RoundRectangle 0,8,0,8" Padding="2" Grid.Column="1">
                <TimePicker  Time="{Binding Section5ViewModel.SessionEndTime}"  />
            </Border>
        </Grid>

        <HorizontalStackLayout HorizontalOptions="Start">
            <Button Text="Back" Command="{Binding ShowSectionCommand}" CommandParameter="4" Margin="4" />
            <Button Text="Next" Command="{Binding ShowSectionCommand}" CommandParameter="6" Margin="4" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>
