<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Northboundei.Mobile.Mvvm.Views.Sections.Section6">
    <VerticalStackLayout Padding="16">
        <!-- Session Start Time -->
        <Grid ColumnDefinitions="auto,*" Margin="0,8">
            <Border StrokeShape="RoundRectangle 8,0,8,0" Padding="2" BackgroundColor="{StaticResource Gray100}">
                <Label Text="Session Start Time" HorizontalOptions="Center" VerticalOptions="Center" />
            </Border>
            <Border StrokeShape="RoundRectangle 0,8,0,8" Padding="2"  Grid.Column="1" >
                <TimePicker  Time="{Binding Section6ViewModel.SessionStartTime}" />
            </Border>
        </Grid>

        <!-- Session Span Dropdown -->
        <Grid ColumnDefinitions="auto,*" Margin="0,8">
            <Border StrokeShape="RoundRectangle 8,0,8,0" Padding="2" BackgroundColor="{StaticResource Gray100}">
                <Label Text="How Long was your Session?" HorizontalOptions="Center" VerticalOptions="Center" />
            </Border>
            <Border StrokeShape="RoundRectangle 0,8,0,8" Padding="2" Grid.Column="1">
                <Picker ItemsSource="{Binding Section6ViewModel.SessionSpans}" 
                                SelectedItem="{Binding Section6ViewModel.SelectedSessionSpan}" 
                                Title="Select Session Duration"
                                Margin="0,8"/>
            </Border>
        </Grid>

        <!-- Session End Time -->
        <Grid ColumnDefinitions="auto,*" Margin="0,8">
            <Border StrokeShape="RoundRectangle 8,0,8,0" Padding="2" BackgroundColor="{StaticResource Gray100}">
                <Label Text="Session End Time" HorizontalOptions="Center" VerticalOptions="Center" />
            </Border>
            <Border StrokeShape="RoundRectangle 0,8,0,8" Padding="2" Grid.Column="1">
                <TimePicker  Time="{Binding Section6ViewModel.SessionEndTime}"  />
            </Border>
        </Grid>

        <HorizontalStackLayout>
            <Button Text="Previous Section" Command="{Binding PreviousSectionCommand}" Margin="4" />
            <Button Text="Save as Draft" Command="{Binding SaveAsDraftCommand}" Margin="4" />
            <Button Text="Next Section" Command="{Binding NextSectionCommand}" Margin="4" />
        </HorizontalStackLayout>
        <Label Text="Stage 5 of 13" HorizontalOptions="Center" VerticalOptions="Center" Margin="8" />
    </VerticalStackLayout>
</ContentView>
