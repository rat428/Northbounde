<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vms="clr-namespace:Northboundei.Mobile.Mvvm.ViewModels.Sections"
             x:DataType="vms:Section7ViewModel"
             x:Class="Northboundei.Mobile.Mvvm.Views.Sections.Section7">
    <VerticalStackLayout Spacing="10">
        <CollectionView ItemsSource="{Binding Diagnoses}" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vms:Diagnosis">
                    <Grid ColumnDefinitions="auto,*" Margin="0,8">
                        <Border StrokeShape="RoundRectangle 8,0,8,0" Padding="2" BackgroundColor="{StaticResource Gray100}">
                            <CheckBox  IsChecked="{Binding IsChecked}"></CheckBox>
                        </Border>
                        <Border StrokeShape="RoundRectangle 0,8,0,8" Padding="2"  Grid.Column="1" >
                            <Label Text="{Binding Name}" HorizontalOptions="Center" VerticalOptions="Center" />
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentView>
