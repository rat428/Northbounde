<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vms="clr-namespace:Northboundei.Mobile.Mvvm.ViewModels.Sections"
             x:Class="Northboundei.Mobile.Mvvm.Views.Sections.Section11">
    <VerticalStackLayout>
        <Label
            Text="How did you work with the parent/caregiver?" />
        <HorizontalStackLayout>
            <CheckBox IsChecked="{Binding IsObservedChecked}" />
            <Label Text="Observed parent/Caregiver and the child during routines" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <CheckBox IsChecked="{Binding IsTriedActivityChecked}" />
            <Label Text="Parent/Caregiver tried Activity, feedback exchanged" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <CheckBox IsChecked="{Binding IsDemonstratedChecked}" />
            <Label Text="Demonstrated activity to parent/caregiver" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <CheckBox IsChecked="{Binding IsReviewedChecked}" />
            <Label Text="Reviewed communication tool with parent/caregiver" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <CheckBox IsChecked="{Binding IsOtherChecked}" />
            <Label Text="Other(s)" />
        </HorizontalStackLayout>
        <Editor
            Text="{Binding OtherDescription}"
            Placeholder="Enter other description..."
            HeightRequest="100"
            IsVisible="{Binding IsOtherChecked}" />
        <Label
            x:Name="OtherValidationLabel"
            TextColor="Red"
            IsVisible="{Binding IsOtherValidationVisible}"
            Text="Other description is required." />
        <HorizontalStackLayout>
            <Button Text="Back" Command="{Binding ShowSectionCommand}" CommandParameter="10" />
            <Button Text="Next" Command="{Binding ShowSectionCommand}" CommandParameter="12" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>
